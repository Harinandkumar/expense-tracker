<h2>Edit Expense</h2>
<form action="/expenses/edit/<%= expense._id %>" method="POST">
  <label>Title:</label>
  <input type="text" name="title" value="<%= expense.title %>" required /><br>
  
  <label>Amount:</label>
  <input type="number" name="amount" value="<%= expense.amount %>" required /><br>
  
  <label>Category:</label>
  <input type="text" name="category" value="<%= expense.category %>" required /><br>
  
  <button type="submit">Update</button>
</form>
<a href="/expenses/list">Back to List</a>
