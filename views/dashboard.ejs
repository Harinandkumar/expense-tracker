<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Welcome, <%= username %></h1>
  <h2>Add Expense</h2>
  <form action="/expenses/add" method="POST">
    <input type="text" name="title" placeholder="Title" required />
    <input type="number" step="0.01" name="amount" placeholder="Amount" required />
    <input type="text" name="category" placeholder="Category" required />
    <input type="date" name="date" required />
    <button type="submit">Add</button>
  </form>

  <h2>Your Expenses</h2>
  <table border="1">
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
    <% expenses.forEach(exp => { %>
      <tr>
        <td><%= exp.title %></td>
        <td><%= exp.amount %></td>
        <td><%= exp.category %></td>
        <td><%= exp.date.toISOString().slice(0,10) %></td>
        <td><a href="/expenses/delete/<%= exp._id %>">Delete</a></td>
      </tr>
    <% }) %>
  </table>

  <h2>Category Totals</h2>
  <ul>
    <% for(let cat in categoryTotals){ %>
      <li><%= cat %>: <%= categoryTotals[cat] %></li>
    <% } %>
  </ul>

  <h2>Monthly Totals</h2>
  <ul>
    <% for(let month in monthlyTotals){ %>
      <li><%= month %>: <%= monthlyTotals[month] %></li>
    <% } %>
  </ul>

  <p><a href="/chat">Go to Chat</a></p>
  <p><a href="/login" onclick="fetch('/logout')">Logout</a></p>
</body>
</html>
