<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>Welcome, <%= username %></h1>
    <a href="/chat" class="small-btn">Chat</a>
    <a href="/logout" class="small-btn">Logout</a>
  </header>

  <section>
    <h2>Add Expense</h2>
    <form action="/expenses/add" method="POST">
      <input name="title" placeholder="Title" required />
      <input name="amount" type="number" step="0.01" placeholder="Amount" required />
      <input name="category" placeholder="Category" required />
      <input name="date" type="date" />
      <button type="submit">Add</button>
    </form>
  </section>

  <section>
    <h2>Your Expenses</h2>
    <table>
      <thead><tr><th>Title</th><th>Amount</th><th>Category</th><th>Date</th><th>Action</th></tr></thead>
      <tbody>
        <% expenses.forEach(e => { %>
          <tr>
            <td><%= e.title %></td>
            <td><%= e.amount %></td>
            <td><%= e.category %></td>
            <td><%= e.date.toISOString().slice(0,10) %></td>
            <td><a href="/expenses/delete/<%= e._id %>">Delete</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <section>
    <h3>Category Totals</h3>
    <ul>
    <% for(const k in categoryTotals){ %>
      <li><%= k %>: <%= categoryTotals[k] %></li>
    <% } %>
    </ul>

    <h3>Monthly Totals</h3>
    <ul>
    <% for(const m in monthlyTotals){ %>
      <li><%= m %>: <%= monthlyTotals[m] %></li>
    <% } %>
    </ul>
  </section>
</body>
</html>
